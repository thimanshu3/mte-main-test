  <body class="overflow-x-hidden">
    <div class="bg-white">
      <!-- Left Side -->
      <div class="float-left w-1/2">
        <h1
          class="mb-1 pl-1 font-bold text-white text-sm"
          style="background-color: #00008b"
        >
          MEWAR TRADERS &amp; ENGINEERS
        </h1>
        <!-- Address -->
        <p class="text-sm">Plot No. 1, 5, 6 Behind Maruti Suzuki Technoy Motors India Pvt.
        Ltd. Chitrakoot Nagar, Sukher, Udaipur-313001 (Raj.)</p>
        <p class="text-sm">GSTN: 08AICPM6265B1ZF</p>
        <p class="text-sm">EMAIL: {{repEmail}}</p>
        <p class="text-sm">WEBSITE: www.mteexim.com</p>
        <!-- Vendor -->
        <h1
          class="mt-4 mb-1 pl-1 font-bold text-white text-sm"
          style="background-color: #00008b; width: 90%;"
        >
          VENDOR
        </h1>
        <p class="text-sm">{{supplierName}}</p>
        <p class="text-sm">{{supplierAddress}}</p>
        <p class="text-sm">GSTN: {{supplierGST}}</p>
      </div>

      <!-- Right Side -->

      <div class="float-left w-1/2">
        <div>
          <h1 class="text-center text-sm font-bold">{{type}}</h1>
          <p class="text-center text-sm w-full">{{approved}}</p>
          <div class="mb-5 mt-4 text-center text-sm" style="font-size: 12px">
            <p class="flex w-full justify-between"><span>{{typeShort}} DATE</span><span>{{date}}</span></p>
            <p class="flex w-full justify-between"><span>{{typeShort}} NO.</span><span>{{id}}</span></p>
            <p class="flex w-full justify-between"><span>ORDER REF. NO.</span><span>{{ref}}</span></p>
            <p class="flex w-full justify-between"><span>PROJECT</span><span>{{project}}</span></p>
          </div>
        </div>
        <h2
          class="pl-1 font-bold mb-1 text-white text-sm"
          style="background-color: #00008b"
        >
          SHIP TO
        </h2>
        <!-- Add ship to information here -->
        <p class="text-sm">MEWAR TRADERS &amp; ENGINEERS</p>
        <p class="text-sm">
          {{addressLine1}}<br />{{addressLine2}}
        </p>
        <p class="text-sm">{{personName}} - {{personMobile}}</p>
      </div>
      <div class="clear-both"></div>
    </div>
    <!--Table Div-->
    <div class="mt-4 flex max-w-full">
      <table class="w-full">
        <tr style="background-color: #00008b" class="text-sm">
          <th class="border border-black p-1 font-bold text-white">SR.</th>
          <th class="border border-black p-1 text-white">ITEM ID</th>
          {{#if showSapCode}}
          <th class="border border-black p-1 text-white">SAP CODE</th>
          {{/if}}
          <th class="border border-black p-1 text-white" style="">DESCRIPTION</th>
          <th class="border border-black p-1 text-white">QTY</th>
          <th class="border border-black p-1 text-white">UOM</th>
          <th class="border border-black p-1 text-white">UNIT PRICE</th>
          <th class="border border-black p-1 text-white">TAXABLE VALUE</th>
          <th class="border border-black p-1 text-white">GST RATE</th>
          <th class="border border-black p-1 text-white">
            TOTAL VALUE<br />(incl. tax)
          </th>
        </tr>
        {{#each items}}
        <tr class="text-center text-xs">
          <td class="border border-black p-1 text-left">{{i}}.</td>
          <td class="border border-black p-1">{{sku}}</td>
          {{#if showSapCode}}
          <td class="border border-black p-1">{{sapCode}}</td>
          {{/if}}
          <td class="border border-black p-1 text-left">{{name}}</td>
          <td class="border border-black p-1 text-right">{{quantity}}</td>
          <td class="border border-black p-1">{{unit}}</td>
          <td class="border border-black p-1 text-right">{{price}}</td>
          <td class="border border-black p-1 text-right">{{taxableValue}}</td>
          <td class="border border-black p-1">{{gst}}%</td>
          <td class="border border-black p-1 text-right">{{total}}</td>
        </tr>
        {{/each}}
      </table>
    </div>
    <div class="mt-4 flex justify-center">
      <!-- Left Section -->
      <div class="w-1/2 border border-black pb-4">
        <h1
          class="p-2 text-center text-white font-bold mb-1 text-sm"
          style="background-color: #00008b"
        >
          COMMENTS OR SPECIAL INSTRUCTION
        </h1>
        <div class="list-decimal pl-1 text-xs">
          {{#each comments}}
            <p>{{c}}</p>
          {{/each}}
        </div>
      </div>

      <!-- Right Section -->
      <div class="w-6/12 space-x-0 border border-black">
        <div class="flex justify-between">
          <div>
            <table class="ml-1 text-sm">
              <tr>
                <td class="p-1 font-bold">ITEMS TOTAL</td>
              </tr>
              {{#each expenses}}
              <tr>
                <td class="p-1 font-bold">{{description}}</td>
              </tr>
              {{/each}}
              <tr>
                <td class="p-1 font-bold">EXPENSES TOTAL</td>
              </tr>
              <tr>
                <td class="p-1 font-bold">TAX</td>
              </tr>
              <tr>
                <td class="p-1 font-bold">TOTAL</td>
              </tr>
            </table>
          </div>
          <div>
            <table class="text-sm">
              <tr>
                <td class="border border-black p-1 text-right">{{totalItemsAmount}}</td>
              </tr>
              {{#each expenses}}
